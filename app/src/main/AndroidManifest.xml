<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cristianodevpro.contab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".NovaReceita"
            android:label="@string/title_activity_nova_receita"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".Sobre"
            android:label="@string/title_activity_sobre"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".NovaDespesa"
            android:label="@string/title_activity_nova_despesa"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cristianodevpro.contab.MainActivity" />
        </activity>
    </application>

</manifest>